---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import Features from '../components/Features';
import FAQ from '../components/FAQ';
import CTA from '../components/CTA';
---

<Layout title="Home">
  <Hero client:load 
    title="Trade & Market Intelligence Platform"
    subtitle="Institutional-grade analytics for the top 1%. Access Daily Market Briefs, Advanced Trade Journaling, and Elite Risk Management."
  />

  <section id="features" class="py-24 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Intelligence Modules</h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          A comprehensive terminal designed for professional market analysis and execution.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {[
          { t: "Daily Market Briefs", d: "Professional daily bias and institutional market analysis." },
          { t: "Advanced Trade Journal", d: "Deep performance tracking and psychology analytics." },
          { t: "Advanced Trading Sessions Clock", d: "Real-time global market session overlaps and volatility." },
          { t: "Advanced Chart", d: "High-performance charting interface for technical precision." },
          { t: "Economic Calendar", d: "Real-time impact tracking for global economic events." },
          { t: "Ebooks Library", d: "Curated institutional knowledge and strategy resources." },
          { t: "Risk Management Hub", d: "Precision lot sizing and drawdown management tools." },
          { t: "Recommended Brokers", d: "Tier-1 liquidity providers for professional execution." },
          { t: "News Room", d: "Live institutional headline aggregator for global markets." }
        ].map((feature) => (
          <div class="p-8 rounded-2xl border border-slate-800 bg-slate-900/40 backdrop-blur-sm hover:border-gold-500/50 transition-all group">
            <h3 class="text-xl font-bold text-gold-500 mb-3">{feature.t}</h3>
            <p class="text-slate-400 text-sm leading-relaxed">{feature.d}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <FAQ client:load />
  <CTA client:load />
</Layout>
