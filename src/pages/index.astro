---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import HeroMacroThesis from '../components/HeroMacroThesis.astro';
import GASReportTeaser from '../components/GASReportTeaser.astro';
import ValuePillars from '../components/ValuePillars.astro';
import Footer from '../components/Footer.astro';

// Professional Metadata
const pageTitle = "The Traders Gazette | Institutional Market Intelligence";
const pageDescription = "Access high-signal macro strategy and data-driven analysis for global markets. Exclusive reports for discerning investors.";
---

<Layout title={pageTitle} description={pageDescription}>
	<Header client:load />
	
	<main class="bg-[#0F172A] text-white">
		<div class="container mx-auto px-4 py-16 space-y-32">
			
			<HeroMacroThesis />

			<section id="intel" class="scroll-mt-24">
				<GASReportTeaser />
			</section>

			<section id="features" class="scroll-mt-24">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-5xl font-bold mb-4">The Terminal Ecosystem</h2>
					<p class="text-gray-400 max-w-2xl mx-auto text-lg">Institutional tools redesigned for the modern strategic investor.</p>
				</div>
				<ValuePillars />
			</section>

			<section class="text-center py-24 border-t border-gray-800/50">
				<h2 class="text-3xl md:text-5xl font-bold mb-6">Ready for Institutional Insight?</h2>
				<p class="text-gray-400 mb-10 max-w-2xl mx-auto italic text-xl">
					Stop chasing news headlines. Start trading with the clarity and precision reserved for the elite 1%.
				</p>
				<a 
					href="https://app.thetradersgazette.com/#auth" 
					style="background: linear-gradient(145deg, #F0D788, #DDAA33);"
					class="inline-block text-gray-900 font-extrabold text-xl py-5 px-12 rounded-xl shadow-2xl hover:brightness-110 transition-all duration-300 transform hover:scale-105"
				>
					Access The Terminal
				</a>
			</section>

		</div>
	</main>

	<Footer />
</Layout>
