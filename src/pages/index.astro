---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.tsx';
import GASReportTeaser from '../components/GASReportTeaser.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
import Footer from '../components/Footer.astro';
import HeroMacroThesis from '../components/HeroMacroThesis.astro';
import PricingTeaser from '../components/PricingTeaser.astro';
import ValuePillars from '../components/ValuePillars.astro';
---

<Layout title="The Traders Gazette | Institutional Market Intelligence">
    <Header client:load />
    
    <main class="container mx-auto px-4 pt-24 space-y-24">
        <HeroMacroThesis />
        
        <section id="features">
            <h2 class="text-3xl font-bold text-center text-white mb-12">The Terminal Ecosystem</h2>
            <FeaturesGrid />
        </section>

        <section id="intel">
            <GASReportTeaser />
        </section>

        <ValuePillars />
        
        <PricingTeaser />

        <section class="text-center py-20 border-t border-gray-800/50">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready for Institutional Insight?</h2>
            <p class="text-gray-400 mb-10 max-w-2xl mx-auto italic text-lg">
                Stop chasing news headlines. Start trading with the clarity and precision reserved for the elite 1%.
            </p>
            <a 
                href="https://app.thetradersgazette.com/#auth" 
                style="background: linear-gradient(145deg, #F0D788, #DDAA33);"
                class="inline-block text-gray-900 font-extrabold text-xl py-5 px-12 rounded-xl shadow-2xl hover:brightness-110 transition-all duration-300 transform hover:scale-105"
            >
                Access The Terminal
            </a>
        </section>
    </main>

    <Footer />
</Layout>
