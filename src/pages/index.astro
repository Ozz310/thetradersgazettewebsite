---
import Layout from '../layouts/Layout.astro';
import HeroMacroThesis from '../components/HeroMacroThesis.astro';
import ValuePillars from '../components/ValuePillars.astro';
import FeaturesGrid from '../components/FeaturesGrid.astro';
---

<Layout title="TG Terminal | Professional Trading Workspace">
  <main>
    
    <HeroMacroThesis />

    <section class="relative py-24 overflow-hidden bg-[#050505]">
      
      <style>
        @keyframes scan-line {
          0% { top: -10%; opacity: 0; }
          15% { opacity: 1; }
          85% { opacity: 1; }
          100% { top: 110%; opacity: 0; }
        }
        .animate-scan {
          animation: scan-line 4s cubic-bezier(0.4, 0, 0.2, 1) infinite;
          box-shadow: 0 0 15px 2px rgba(221, 170, 51, 0.6); /* Gold glow */
        }
      </style>

      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-7xl pointer-events-none">
        <div class="absolute top-[20%] left-[10%] w-[500px] h-[500px] bg-[#DDAA33]/10 blur-[120px] rounded-full mix-blend-screen"></div>
      </div>

      <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          
          <div class="relative z-10 order-2 lg:order-1">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 tracking-tight">
              Professional <br />
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#F0D788] via-[#DDAA33] to-[#B8860B]">
                Trade Journaling
              </span>
            </h2>
            <p class="text-neutral-400 text-lg mb-8 leading-relaxed">
              The heart of the terminal. Stop guessing and start tracking. Record every entry, exit, and emotion to build a data-driven profile of your trading psychology.
            </p>
            
            <ul class="space-y-5">
              {[
                'Automated Win-Rate & PnL Analytics',
                'Emotional State & Bias Tracking',
                'Risk/Reward Ratio Optimization',
                'Instant Strategy Performance Reports'
              ].map((item) => (
                <li class="flex items-center text-neutral-300">
                  <span class="flex-shrink-0 w-1.5 h-1.5 rounded-full bg-[#DDAA33] mr-4 shadow-[0_0_8px_#DDAA33]"></span>
                  {item}
                </li>
              ))}
            </ul>

            <div class="mt-10">
              <a href="/#journal" class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-black transition-all duration-200 bg-gradient-to-r from-[#F0D788] to-[#DDAA33] rounded-full hover:shadow-[0_0_20px_rgba(221,170,51,0.4)] hover:scale-105">
                Analyze your Edge
                <svg class="w-5 h-5 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
              </a>
            </div>
          </div>

          <div class="relative group order-1 lg:order-2">
            <div class="absolute -inset-1 bg-gradient-to-r from-[#DDAA33] to-[#F0D788] rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000"></div>
            
            <div class="relative rounded-2xl bg-neutral-900/80 border border-white/10 p-2 ring-1 ring-white/10 backdrop-blur-sm overflow-hidden">
              
              <img 
                src="https://github.com/Ozz310/tradersgazetteterminal/blob/main/images/Trade%20journal.PNG?raw=true" 
                alt="TG Terminal Trade Journal Dashboard" 
                class="rounded-xl w-full h-auto shadow-2xl relative z-10"
              />

              <div class="absolute inset-0 z-20 pointer-events-none rounded-xl overflow-hidden">
                <div class="w-full h-[3px] bg-gradient-to-r from-transparent via-[#DDAA33] to-transparent absolute top-0 left-0 animate-scan"></div>
              </div>

            </div>
          </div>
          
        </div>
      </div>
    </section>

    <ValuePillars />

    <FeaturesGrid />

  </main>
</Layout>
