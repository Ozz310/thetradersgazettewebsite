---
// src/pages/blog.astro
import Layout from '../layouts/Layout.astro';
import BlogCard from '../components/BlogCard.astro';

const pageTitle = "The Trader's Gazette Blog: Deep Macro & Trading Analysis";
const pageDescription = "Exclusive long-form articles, educational guides, and advanced macro primers to elevate your trading strategy and generate organic traffic.";

// Placeholder data for blog posts (will be replaced by Headless CMS integration later)
const posts = [
    { slug: 'understanding-yield-curve-inversions', title: 'Understanding Yield Curve Inversions: The Ultimate Recession Signal', date: 'Oct 15, 2025', summary: 'A deep-dive into the mechanics of the yield curve and its predictive power for macro trends.' },
    { slug: 'optimal-position-sizing', title: 'Optimal Position Sizing: Risk Management for the Strategic Trader', date: 'Oct 8, 2025', summary: 'Advanced techniques to protect capital and maximize returns using volatile assets.' },
];
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-16 space-y-12">
        <header class="text-center pb-8 border-b border-gray-700/50">
            <h1 class="text-5xl font-extrabold text-white mb-2">The Gazette Blog</h1>
            <p class="text-xl text-gray-400">Strategic knowledge for the discerning investor.</p>
        </header>

        <section>
            <h2 class="text-2xl font-bold text-tg-gold mb-6">Latest Insights</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {posts.map(post => (
                    <BlogCard post={post} />
                ))}
            </div>
        </section>

        <section class="text-center pt-12">
            <h3 class="text-3xl font-bold text-white mb-4">Beyond Theory: Actionable Analysis</h3>
            <p class="text-gray-400 mb-8 max-w-xl mx-auto">
                These articles lay the foundation. Get our real-time, actionable analysis and daily forecasts inside the app.
            </p>
            <a href="/auth/register" class="bg-tg-gold text-gray-900 font-extrabold text-lg py-3 px-8 rounded-lg shadow-xl hover:bg-yellow-500 transition-all duration-300">
                Start 7-Day Free Trial
            </a>
        </section>
    </div>
</Layout>
