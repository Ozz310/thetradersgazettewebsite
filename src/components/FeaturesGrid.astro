---
// src/components/FeaturesGrid.astro
const features = [
  {
    title: "Macro Dashboard",
    description: "Real-time global market health at a glance.",
    gridArea: "md-span-2"
  },
  {
    title: "Risk Calculator",
    description: "Instant position sizing based on portfolio equity.",
    gridArea: "md-span-1"
  },
  {
    title: "Session Outlook",
    description: "Pre-market analysis and key levels for the day.",
    gridArea: "md-span-1"
  },
  {
    title: "Asset Correlations",
    description: "Live heatmaps of cross-asset performance.",
    gridArea: "md-span-2"
  }
];
---

<section class="py-24 bg-[#050505] relative">
  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Intelligence Modules</h2>
      <p class="text-neutral-400 max-w-2xl mx-auto">A modular system designed for total market awareness.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {features.map((feature, index) => (
        <div class={`p-8 rounded-2xl border border-neutral-800 bg-[#0a0a0a] hover:bg-neutral-900/80 transition-colors ${index === 0 || index === 3 ? 'md:col-span-2' : 'md:col-span-1'}`}>
          <h3 class="text-xl font-bold text-white mb-3 text-[#DDAA33]">{feature.title}</h3>
          <p class="text-neutral-400">
            {feature.description}
          </p>
        </div>
      ))}
    </div>

  </div>
</section>
