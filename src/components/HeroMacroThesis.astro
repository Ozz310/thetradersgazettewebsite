---
// src/components/HeroMacroThesis.astro
// Description: Premium Hero Section - Text Left / 3D Dashboard Right
// Mode: Production-Grade | Top 1% UI/UX Standards
---

<section class="relative min-h-screen flex items-center justify-center py-12 md:py-20 overflow-hidden bg-[#050505]">
  
  <div class="absolute inset-0 w-full h-full pointer-events-none">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:50px_50px] [mask-image:radial-gradient(ellipse_at_center,black,transparent_80%)]"></div>
    <div class="absolute top-[-10%] right-[10%] w-[600px] h-[600px] bg-[#DDAA33]/10 blur-[120px] rounded-full mix-blend-screen"></div>
  </div>

  <div class="container mx-auto px-6 z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <div class="text-left order-1 space-y-8 animate-fade-in-up">
        <header class="space-y-4">
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-serif font-bold text-white leading-[1.1]">
            The Terminal <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-[#BF953F] via-[#FCF6BA] to-[#B38728] italic">
              For The 1%
            </span>
          </h1>
          
          <p class="text-lg md:text-xl text-[#8B949E] font-light max-w-xl leading-relaxed">
            Institutional-grade analytics, real-time global news, and elite execution tools. 
            Stop trading like a retailer. Start operating like a bank.
          </p>
        </header>

        <div class="pt-4">
          <a 
            href="https://app.thetradersgazette.com/#auth" 
            class="inline-block px-10 py-4 rounded-full bg-[linear-gradient(145deg,#F0D788,#DDAA33)] text-black font-bold text-lg transition-all duration-300 shadow-[0_10px_20px_rgba(221,170,51,0.2)] hover:shadow-[0_15px_30px_rgba(221,170,51,0.4)] hover:-translate-y-1 active:scale-95"
          >
            Launch Terminal
          </a>
        </div>
      </div>

      <div class="relative w-full group perspective-1200 order-2 animate-fade-in-right">
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[85%] h-[70%] bg-[#DDAA33]/20 blur-[100px] rounded-full animate-pulse-slow"></div>

        <div class="relative transform transition-all duration-1000 cubic-bezier group-hover:rotate-y-[-6deg] rotate-y-[-12deg] rotate-x-2 scale-100 lg:scale-105">
          <div class="rounded-xl border border-white/10 bg-[#0a0a0a] p-1.5 shadow-2xl shadow-black/90 ring-1 ring-white/5 overflow-hidden">
            <img 
              src="https://raw.githubusercontent.com/Ozz310/tradersgazetteterminal/refs/heads/main/images/Dashboard_TG.png" 
              alt="Traders Gazette Terminal Interface" 
              class="w-full h-auto rounded-lg border border-white/5"
              loading="eager"
              fetchpriority="high"
            />
          </div>
          <div class="absolute inset-0 rounded-xl bg-gradient-to-tr from-white/10 via-transparent to-transparent pointer-events-none"></div>
        </div>
      </div>

    </div>
  </div>
</section>

<style>
  /* --- Professional Animation & 3D Suite --- */
  .perspective-1200 { perspective: 1200px; }
  .cubic-bezier { transition-timing-function: cubic-bezier(0.23, 1, 0.32, 1); }

  .rotate-y-\[-12deg\] { transform: rotateY(12deg) rotateX(2deg); }
  .group:hover .group-hover\:rotate-y-\[-6deg\] { transform: rotateY(4deg) rotateX(0deg); }

  @keyframes pulseGlow {
    0% { opacity: 0.3; transform: translate(-50%, -50%) scale(0.9); }
    100% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.1); }
  }

  .animate-pulse-slow { animation: pulseGlow 8s infinite alternate ease-in-out; }
  .animate-fade-in-up { animation: fadeInUp 1s ease-out forwards; }
  .animate-fade-in-right { animation: fadeInRight 1.2s ease-out forwards; }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(40px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeInRight {
    from { opacity: 0; transform: translateX(40px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @media (max-width: 1024px) {
    .rotate-y-\[-12deg\] { transform: rotateY(0deg) rotateX(4deg); }
    .text-left { text-align: center; }
    .text-left p { margin-left: auto; margin-right: auto; }
  }
</style>
