---
// src/components/BlogCard.astro
interface Props {
    post: {
        slug: string;
        title: string;
        date: string;
        summary: string;
    };
}
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}/`} class="block group bg-[#111111] border border-[#222] hover:border-[#DDAA33]/40 transition-all duration-300 rounded-xl shadow-lg hover:shadow-black/60 hover:-translate-y-1 overflow-hidden">
    <div class="p-6">
        <time class="text-sm font-mono text-[#DDAA33] mb-2 block tracking-wide opacity-90">{post.date}</time>
        
        <h3 class="text-xl font-serif font-bold text-[#f1f1f1] mb-3 group-hover:text-[#DDAA33] transition duration-300 leading-tight">
            {post.title}
        </h3>
        
        <p class="text-[#8B949E] text-sm mb-5 leading-relaxed">
            {post.summary}
        </p>
        
        <span class="text-xs font-bold uppercase tracking-wider text-[#f1f1f1] group-hover:text-[#DDAA33] flex items-center gap-2 transition-colors">
            Read Article 
            <span class="transform group-hover:translate-x-1 transition-transform">â†’</span>
        </span>
    </div>
</a>
