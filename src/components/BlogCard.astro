---
// src/components/BlogCard.astro
interface Props {
    post: {
        slug: string;
        title: string;
        date: string;
        summary: string;
    };
}
const { post } = Astro.props;
---
<a href={`/blog/${post.slug}/`} class="block group bg-gray-800/50 hover:bg-gray-800 transition duration-300 rounded-xl shadow-lg overflow-hidden border border-gray-700/50">
    <div class="p-6">
        <time class="text-sm font-mono text-tg-gold mb-2 block">{post.date}</time>
        <h3 class="text-xl font-bold text-white mb-3 group-hover:text-tg-gold transition duration-300">
            {post.title}
        </h3>
        <p class="text-gray-400 text-sm mb-4">
            {post.summary}
        </p>
        <span class="text-sm font-semibold text-white/80 group-hover:underline">Read Article &rarr;</span>
    </div>
</a>
