---
// COMPONENT: IdentityGrid (Who Is TG For?)
// DESIGN: Holographic Glassmorphism, Sovereign Gold Glows, Abstract Icons
// SEO: Audience Schema Injection

const profiles = [
  {
    title: "The Structure Seeker",
    tag: "CENTRALIZATION",
    desc: "You crave order. Your edge is defined by your routine, system, and processâ€”not your gut feeling.",
    // ICON: Abstract Cube Lattice
    icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
  },
  {
    title: "The Efficiency-Focused",
    tag: "VELOCITY",
    desc: "Time is your most expensive asset. You need analysis in seconds, not hours. You automate the boring stuff.",
    // ICON: Lightning Bolt / Fast Execution
    icon: "M13 10V3L4 14h7v7l9-11h-7z"
  },
  {
    title: "The Strategic Optimizer",
    tag: "REFINEMENT",
    desc: "Data is your language. You refine edge through journaling, review, and math. You don't gamble; you calculate.",
    // ICON: Chess Strategy / Crown
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
  },
  {
    title: "The Action-Oriented",
    tag: "EXECUTION",
    desc: "You learn by doing. You need tools that deploy frameworks immediately. Theory is useless without execution.",
    // ICON: Terminal Prompt / Code
    icon: "M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
  }
];
---

<section class="py-24 bg-[#050505] relative border-t border-white/5">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-gold-500/10 via-transparent to-transparent opacity-30 pointer-events-none"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-3xl md:text-5xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-[#F0D788] to-[#DDAA33]">
        Who Is TG Terminal For?
      </h2>
      <p class="text-slate-400 max-w-2xl mx-auto text-lg leading-relaxed">
        Built for the <span class="text-gold-400 font-semibold">top 1% mindset</span>. We strip away the noise of retail signals to focus on structure, probability, and institutional workflow.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {profiles.map((profile) => (
        <div 
          class="group relative p-8 rounded-2xl bg-[#0A0A0A] border border-white/5 hover:border-gold-500/40 transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_0_30px_rgba(240,215,136,0.05)]"
          itemscope itemtype="http://schema.org/Audience"
        >
          <div class="absolute inset-0 bg-gradient-to-b from-white/5 to-transparent opacity-0 group-hover:opacity-100 rounded-2xl transition-opacity duration-500 pointer-events-none"></div>
          
          <div class="relative z-10 flex flex-col h-full">
            <div class="w-14 h-14 mb-6 rounded-xl bg-[#0F0F0F] border border-white/10 flex items-center justify-center text-slate-500 group-hover:text-gold-400 group-hover:border-gold-500/30 group-hover:shadow-[0_0_15px_rgba(240,215,136,0.15)] transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={profile.icon} />
              </svg>
            </div>
            
            <div class="text-[10px] font-mono font-bold tracking-[0.2em] text-slate-600 mb-4 group-hover:text-gold-500/80 transition-colors uppercase">
              {profile.tag}
            </div>
            
            <h3 class="text-xl font-bold text-slate-200 mb-4 group-hover:text-white transition-colors" itemprop="audienceType">
              {profile.title}
            </h3>
            
            <p class="text-slate-500 text-sm leading-relaxed border-l-2 border-transparent group-hover:border-gold-500/30 pl-0 group-hover:pl-4 transition-all duration-300 group-hover:text-slate-300">
              {profile.desc}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
