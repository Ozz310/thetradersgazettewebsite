---
// src/layouts/Layout.astro
import '../styles/global.css';

// 1. Import the Header and Footer components directly here
// (Check if your file is .astro or .tsx, I have included both imports just in case, uncomment the one you use)
import Header from '../components/Header'; // If using React (.tsx)
// import Header from '../components/Header.astro'; // If using Astro

import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Institutional-grade analytics for the 1%." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,600;0,700;1,600&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	</head>
	
	<body class="bg-[#050505] text-[#f1f1f1] antialiased min-h-screen flex flex-col selection:bg-[#DDAA33] selection:text-black">
		
		<Header client:load /> 
		
		<main class="flex-grow pt-20"> <slot />
		</main>

		<Footer />
		
	</body>
</html>
